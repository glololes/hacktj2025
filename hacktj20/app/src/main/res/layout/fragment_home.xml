<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="650dp"
        app:layout_constraintTop_toBottomOf="@+id/topPanel"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-127dp"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="0dp">

            <!-- Banner Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"

                android:background="@drawable/homebanner2"
                android:clipToPadding="true"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Learn to Shop Sustainably"
                    android:fontFamily="@font/flatory_serif_semibold_semicondensed"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="30sp" />
            </RelativeLayout>

            <!-- ecoscore -->
            <RelativeLayout
                android:layout_width="377dp"
                android:layout_height="153dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="180dp"
                android:background="@color/light_yellow"
                android:clipToPadding="true"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/flatory_serif_semibold_semicondensed"
                    android:text="Your ECO SCORE:"
                    android:textColor="@color/dark_green"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/ecoscore_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/flatory_serif_semibold_semicondensed"
                    android:text="302"
                    android:textStyle="bold"
                    android:textColor="@color/dark_green"
                    android:textSize="50sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="95dp"
                    android:fontFamily="@font/flatory_serif_semibold_semicondensed"
                    android:text="*Get more points to score more rewards!"
                    android:textColor="@color/dark_green"
                    android:textSize="15sp" />
            </RelativeLayout>

            <!-- ecoscore -->
            <RelativeLayout
                android:layout_width="377dp"
                android:layout_height="153dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/flatory_serif_semibold_semicondensed"
                android:layout_marginTop="360dp"
                android:background="@color/light_yellow"
                android:clipToPadding="true"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/flatory_serif_semibold_semicondensed"
                    android:text="Your HEALTH SCORE:"
                    android:textColor="@color/dark_green"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/health_score_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="TBD"
                    android:fontFamily="@font/flatory_serif_semibold_semicondensed"
                    android:textColor="@color/dark_green"
                    android:textSize="50sp" />
            </RelativeLayout>

            <!-- infographic -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_height="1000dp"
                android:layout_marginTop="500dp"
                android:layout_centerHorizontal="true"
                android:background="@android:color/white"
                android:clipToOutline="true"

                android:scaleType="centerCrop"
                android:src="@drawable/sus_infographic" />

            <!-- Button -->
            <Button
                android:id="@+id/btn_get_started"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1500dp"
                android:text="Get Started"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#588157"
                android:gravity="center"
                android:padding="10dp"/>

        </RelativeLayout>
    </ScrollView>
    <!-- App Logo Box -->
    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:background="@color/dark_green"
        android:padding="12dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="219dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:src="@drawable/garnet_logo"
            android:textColor="@android:color/white"
            android:textSize="40sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>